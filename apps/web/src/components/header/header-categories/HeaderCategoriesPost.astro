---
const {link, title, category} = Astro.props

let isCategory = (category !== undefined && category !== '' && category !== 'false')

---
<a href={link} class:list={[{ 'js--link': isCategory }]}>
  <div class:list={['hcp border shadow shadow--hover', { 'hcp--center': isCategory }]}>
    <div class="hcp__title js-hcp__title"><Fragment set:html={title} /></div>
  </div>
</a>
<style>
  .hcp {
    display: flex;
    width: 100%;
    min-height: 40px;
    margin-bottom: 16px;
    padding: 16px 0;
    background: #FFDB58;
    border-radius: .5rem;
  }

  .hcp--center {
    text-align: center;
  }

  .hcp__title {
    margin: auto 0;
    padding: 0 16px;
    font-size: 1.5rem;
    font-weight: 500;
    color: #000;
    width: 100%;
  }
</style>
