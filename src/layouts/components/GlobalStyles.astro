---
import '@fontsource/righteous'
import '@fontsource-variable/outfit';
---
<style is:global>
  :root {
    --color-black: var(--color-black);
    --color-white: #fff;
    --color-primary: #7Df9FF;
    --color-secondary: #2FFF2F;
    --color-tertiary: #FF00F5;
    --color-quaternary: #3300FF;
    --color-quinary: #FFFF00;
    --color-senary: #FF4911;
    --br-border-size: 2px;
    --br-border-radius: 0.5rem;
    --br-shadow-size: 4px;
    --br-animation-duration: 0.2s;
    --br-animation-easing: ease-in-out;
    --fontsource-display: 'swap';
  }

  body {
    font-family: 'Outfit Variable', sans-serif;
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .righteous {
    font-family: 'Righteous', sans-serif;
  }

  .br-border {
    border: var(--br-border-size) solid #000;
    border-radius: var(--br-border-radius);
  }

  .br-shadow {
    box-shadow: var(--br-shadow-size) var(--br-shadow-size) 0 0 #000;
    transition: transform var(--br-animation-duration) var(--br-animation-easing),
    box-shadow var(--br-animation-duration) var(--br-animation-easing);
  }

  .br-shadow:hover {
    box-shadow: 0 0 0 0 #000;
    transform: translate(var(--br-shadow-size), var(--br-shadow-size));
  }
</style>
