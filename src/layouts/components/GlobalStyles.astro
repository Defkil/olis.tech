---
import '@fontsource-variable/space-grotesk';
import '@fontsource-variable/outfit';
---
<style is:global lang="scss">
  @import "../../const/styles.module.scss";

  :root {
    --color-black: #{$color-black};
    --color-white: #{$color-white};
    --color-primary: #{$color-primary};
    --color-secondary: #{$color-secondary};
    --color-tertiary: #{$color-tertiary};
    --color-quaternary: #{$color-quaternary};
    --color-quinary: #{$color-quinary};
    --color-senary: #{$color-senary};
    --border-size: 2px;
    --border-radius: 0.5rem;
    --shadow-size: 4px;
    --animation-duration: 0.2s;
    --animation-easing: ease-in-out;
    --fontsource-display: 'swap';
    --font-family-default: 'Outfit Variable', sans-serif;
    --font-family-hightlight: 'Space Grotesk Variable', sans-serif;
    --container-max-width: 1200px;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: var(--font-family-default);
  }

  .border {
    border: var(--border-size) solid #000;
  }

  .shadow {
    box-shadow: var(--shadow-size) var(--shadow-size) 0 0 #000;
    transition: transform var(--animation-duration) var(--animation-easing),
    box-shadow var(--animation-duration) var(--animation-easing);
  }

  .shadow--hover:hover {
    transform: translate(var(--shadow-size), var(--shadow-size));
    box-shadow: 0 0 0 0 #000;
  }
</style>
