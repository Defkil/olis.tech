---
import '@fontsource/righteous'
import '@fontsource-variable/outfit';
---
<style is:global>
  :root {
    --color-black: #000;
    --color-white: #fff;
    --color-primary: #7Df9FF;
    --color-secondary: #2FFF2F;
    --color-tertiary: #FF00F5;
    --color-quaternary: #3300FF;
    --color-quinary: #FFFF00;
    --color-senary: #FF4911;

    --border-size: 2px;
    --border-radius: 0.5rem;
    --shadow-size: 4px;
    --animation-duration: 0.2s;
    --animation-easing: ease-in-out;

    --fontsource-display: 'swap';
    --font-family-default: 'Outfit Variable', sans-serif;
    --font-family-hightlight: 'Righteous', sans-serif;

    --container-max-width: 1200px;
  }

  body {
    font-family: var(--font-family-default);
    margin: 0;
    padding: 0;
  }

  .border {
    border: var(--border-size) solid #000;
  }

  .shadow {
    box-shadow: var(--shadow-size) var(--shadow-size) 0 0 #000;
    transition: transform var(--animation-duration) var(--animation-easing),
    box-shadow var(--animation-duration) var(--animation-easing);
  }

  .shadow--hover:hover {
    box-shadow: 0 0 0 0 #000;
    transform: translate(var(--shadow-size), var(--shadow-size));
  }
</style>
