  const translations = {
    modal: {
      searchBox: {
        resetButtonTitle: 'Anfrage löschen',
        resetButtonAriaLabel: 'Anfrage löschen',
        cancelButtonText: 'Abbrechen',
        cancelButtonAriaLabel: 'Abbrechen',
