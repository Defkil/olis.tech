      footer: {
        selectText: 'Auswählen',
        selectKeyAriaLabel: 'Eingabetaste',
        navigateText: 'Navigieren',
        navigateUpKeyAriaLabel: 'Pfeil nach oben',
        navigateDownKeyAriaLabel: 'Pfeil nach unten',
        closeText: 'Schließen',
        closeKeyAriaLabel: 'Escape-Taste',
        searchByText: 'Suche durch',
      },
      noResultsScreen: {
        noResultsText: 'Keine Ergebnisse für',
        suggestedQueryText: 'Versuche zu suchen nach',
        reportMissingResultsText: 'Glaubst du, dass die Ergebnisse fehlen?',
        reportMissingResultsLinkText: 'Lasst es uns wissen',
      },
    },
  };

  class AlgoliaSearch extends HTMLElement {
    connectedCallback() {
      docsearch({
        container: '#docsearch', appId: 'YOUR_APP_ID', indexName: 'YOUR_INDEX_NAME', apiKey: 'YOUR_SEARCH_API_KEY', translations, placeholder: 'Olis.tech durchsuchen'
      });
    }
  }

  customElements.define('algolia-search', AlgoliaSearch);
</script>
