---
import WaveSeparator from "../WaveSeparator.astro";
import {styles} from "../../const/styles";
import HeaderCategories from "./HeaderCategories.astro";
import './Header.css'

const { category } = Astro.props
---
<div class="header">
  <header-search>
    <header class='header__container'>
      <h1 class='title'>
        <a href="/" data-swup-preload><button class="title__button">Olis.tech</button></a>
      </h1>
      <div class='search'>
        <label class="search__label">
          <input type="text" placeholder="Wie zentriere ich eine div?" class="search__input border shadow shadow--hover" />
        </label>
        <button class="search__button border shadow shadow--hover">Suchen</button>
      </div>
    </header>
  </header-search>
</div>
<div class="header__categories">
  <WaveSeparator color={styles["color-secondary"]} />
  <HeaderCategories selectedCategory={category} />
  <WaveSeparator color={styles["color-senary"]} />
</div>
<script>
  class HeaderSearch extends HTMLElement {
    constructor() {
      super();
    }
  }

  customElements.define('header-search', HeaderSearch);
</script>
