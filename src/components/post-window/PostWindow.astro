---
import './PostWindow.scss';

interface PostWindowProps {
  collection: string
  lastPublishOrUpdate: string
  image: string
  imageAlt: string
  titel: string
  excerpt: string
  link: string
}

const { post }: Record<string, PostWindowProps> = Astro.props

if (!post) {
  throw new Error('PostWindow: post is undefined')
}
---
<div class="window">
  <a href={post.link} style="text-decoration: none;">
    <div class="window__header">
      <span class="window__header-title">{post.lastPublishOrUpdate}</span>
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
    </div>
    <img class="window__image" loading="lazy" src={post.image} alt={post.imageAlt}>
    <h2 class="window__title">{post.titel}</h2>
    <p class="window__excerpt">{post.excerpt}</p>
    <div class="window__footer">
      Weiterlesen âž”
    </div>
  </a>
  <div class="window__category">
    Aus
    <a href="/a" class="window__category-link">{post.collection}</a>
  </div>
</div>
