---
import {WaveSeparatorColors} from "../const/styles";
const { color } = Astro.props

if (!WaveSeparatorColors.includes(color)) {
  throw new Error(`Invalid color prop: ${color}`)
}

const colorName = color.replace('#', '')
---
<style>
  .separator {
    position: absolute;
    z-index: 10;

    width: 100%;
    height: 16px;
    margin-bottom: -16px;
  }

  .hidden-pattern {
    display: none;
  }
</style>
<div class="separator">
  <svg width="100%" height="16px">
    <use href={'#separator-' + colorName} />
  </svg>
</div>
